extends layout

block Contenido
    section.MiCuenta 
        h2  Mis Direcciones
        
        .Direcciones
            if(direcciones.length)
                each Direccion in direcciones
                    .divDireccion
                        .TextoDireccion 
                            .IconoDir 
                                i(class="fa-solid fa-house")
                            .Texto 
                                p.Calle= `${Direccion.Direccion}  ${Direccion.Numeracion}`
                                .TextoAbajo
                                    p= `Codigo postal ${Direccion.CodigoPostal} - ${Direccion.Provincia} - ${Direccion.Ciudad}`
                                    p= `${Direccion.Nombre} ${Direccion.Apellido} ${Direccion.Telefono} `
                        .BtnDireccionMenu 
                            i(class="fa-solid fa-ellipsis-vertical BotonMenDireccion")
                            .BtnDireccion.Invisible
                                a(href=`/Direcciones/Editar/${Direccion.id}`) 
                                    button.Boton(name='Editar' type='submit' value='Editar')
                                        span Editar
                                a(href="#") 
                                    button.Boton(name='Eliminar' data-id=`${Direccion.id}`  id="BtnEliminar" type='submit' value='Eliminar')
                                        span Eliminar
                            
                .divAgregar 
                    a(href="/Direcciones/Agregar") 
                        button.Boton(name='Eliminar' type='submit' value='Eliminar')
                            span Agregar Direccion
            else 
                p.DireccionH3 No Tiene ninguna Direccion agregada 
                .left.Campo  
                    a(href="/Direcciones/Agregar") 
                        button.Boton(name='Eliminar' type='submit' value='Eliminar')
                            span Agregar Direccion
    

