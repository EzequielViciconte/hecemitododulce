header.Header(class=Pagina)
  div(class=Header)
    .Barra(class=Pagina != 'index' ? 'BarraCom' : '')
      a(href='/')
        h1 HecemiTodoDulce
      i(class="fa-solid fa-bars MenuMostrar")
      nav.MenuNavegacion
        if(locals.usuario.id)
          include partials/nav-autenticado.pug
        else 
          include partials/nav-noautenticado.pug
        li.liMenu
          a.menulink.Btncarrito(href='')
            i.BotonCarrito.fa.fa-shopping-cart
              span.CantidadProductos 0
    .Carrito
          i.fa.fa-circle-xmark.CerrarCarrito
          .CarritoContenido.CarritoDiv 
          .CarritoTotal
            p.SubTotal SubTotal: $0
          .VerCarritoDiv
            a.verCarrito(href="/carrito") Ver Carrito 

    if(Pagina == 'index')        
      h1.Titulo Exquisitas Tartas Dulces Para Compartir En Familia
    
  if(locals.mensajes)
    .alertas
      each Categoria in Object.keys(locals.mensajes)
        each alerta in locals.mensajes[Categoria]
          .alerta(class=`${Categoria}`)
            p= alerta 
block Contenido

    
footer.Footer.Seccion
  .ContenedorInfo
    .ElementosFooter.RedesSociales
      h3
        | Redes 
        span Sociales
      nav.RedesSocialesNav
        a.BotonWhatsapp(href='#')
          i.fab.fa-whatsapp
        a.BotonInstagram(href='#')
          i.fab.fa-instagram
        a.BotonFacebook(href='#')
          i.fab.fa-facebook-square
    .ElementosFooter.InformacionTienda
      h3
        | Informacion de la 
        span Tienda
      p Presidente Peron 775 Villa Rosa
      p Email:hecemitododulce@gmail.com
    .ElementosFooter.MediosDePagos
      h3
        | Medios de 
        span Pagos
      .ContenedorPagos
        p
          i.fas.fa-money-bill-wave
          |  Efectivo
        p
          i.far.fa-credit-card
          |  Credito/Debito
        p
          i.fas.fa-university
          | Transferencia
